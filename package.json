{
  "name": "saltana",
  "private": true,
  "workspaces": [
    "packages/app",
    "packages/sdk",
    "packages/api",
    "packages/edge",
    "packages/common",
    "packages/common-internal",
    "packages/env"
  ],
  "scripts": {
    "start": "yarn workspaces foreach -ip run start",
    "build": "yarn workspaces foreach -p run build",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "lint:fix": "eslint --cache --report-unused-disable-directives --fix .",
    "test": "jest",
    "g:lint": "yarn lint \"$INIT_CWD\"",
    "g:test": "yarn test \"$INIT_CWD\"",
    "postinstall": "husky install",
    "format": "prettier-eslint \"packages/**\""
  },
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.14",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@emotion/react": "^11.1.5",
    "@saltana/env": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@jest/types": "^26.6.2",
    "@types/node": "^14.14.37",
    "@types/prettier": "^2.2.3",
    "@yarnpkg/pnpify": "2.4.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "prettier-eslint-cli": "^5.0.1",
    "supports-color": "^9.0.0",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "packages/app/**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
