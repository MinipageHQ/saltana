{
  "name": "saltana",
  "private": true,
  "workspaces": [
    "services/web",
    "services/edge",
    "services/core",
    "packages/common",
    "packages/fil",
    "packages/react",
    "packages/sdk",
    "packages/util-keys",
    "packages/vendor-objection"
  ],
  "scripts": {
    "install:all": "yarn workspaces foreach -ip install",
    "start": "yarn workspaces foreach -ip run start",
    "dev": "concurrently '(cd ./packages/app && yarn dev)' '(cd ./packages/core && yarn dev)'",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "lint:fix": "eslint --cache --report-unused-disable-directives --fix .",
    "test": "jest",
    "g:lint": "yarn lint \"$INIT_CWD\"",
    "g:test": "yarn test \"$INIT_CWD\"",
    "postinstall": "husky install",
    "format": "prettier-eslint \"packages/**\""
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@jest/types": "^26.6.2",
    "@types/babel__core": "^7",
    "@types/concurrently": "^6",
    "@types/node": "^14.14.37",
    "@types/prettier": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@yarnpkg/pnpify": "3.0.0-rc.3",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.1.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.0",
    "prettier": "^2.3.0",
    "prettier-eslint-cli": "^5.0.1",
    "typescript": "3.7.2"
  },
  "lint-staged": {
    "packages/app/**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "volta": {
    "node": "16.2.0",
    "yarn": "1.22.10"
  },
  "dependencies": {
    "node-gyp": "^8.0.0"
  }
}
