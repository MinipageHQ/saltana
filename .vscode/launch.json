{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "web next dev",
      "runtimeExecutable": "${workspaceFolder}/services/web/node_modules/.bin/next",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}/services/web",
      "port": 9229,
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "web Next.js App",
      "skipFiles": ["<node_internals>/**"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "core dev",
      "runtimeExecutable": "node",
      "runtimeArgs": ["server/start.js"],
      "cwd": "${workspaceFolder}/services/core",
      "port": 9329,
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect",

        "NODE_ENV": "development",
        "ROARR_LOG": "true"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "core",
      "skipFiles": ["<node_internals>/**"],
      "port": 9329
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug AVA test file in core",
      "runtimeExecutable": "${workspaceFolder}/services/core/node_modules/.bin/ava",
      "runtimeArgs": ["${file}"],
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
