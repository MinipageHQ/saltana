{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug AVA test file in core",
      "runtimeExecutable": "${workspaceFolder}/services/core/node_modules/.bin/ava",
      "runtimeArgs": ["${file}"],
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "type": "vscode-edge-devtools.debug",
      "request": "launch",
      "name": "Launch Microsoft Edge and open the Edge DevTools",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "headless": true
    },
    {
      "name": "Launch App",
      "request": "launch",
      "runtimeArgs": ["run", "dev"],
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/packages/app",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },

    {
      "name": "Launch Core",
      "request": "launch",
      "runtimeArgs": ["run", "dev"],
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/packages/core",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },

    {
      "type": "browse-lite",
      "request": "attach",
      "name": "Browse Lite: Attach"
    },
    {
      "type": "browse-lite",
      "request": "launch",
      "name": "Browse Lite: Launch",
      "url": "http://localhost:3000"
    },

    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "args": ["dlx", "jest", "--runInBand", "--watchAll=false"]
    }
  ]
}
