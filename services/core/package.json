{
  "name": "@saltana/core",
  "version": "1.0.0-beta.8",
  "description": "API server for Platforms built to last",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/saltanahq/saltana.git"
  },
  "main": "index.js",
  "license": "GPL-3.0",
  "scripts": {
    "start": "node server/start.js",
    "dev": "ROARR_LOG=true yarn run start",
    "pretest": "NODE_ENV=test node test/pretest.js",
    "plugins": "yarn run plugins:install && yarn run plugins:prepare",
    "plugins:install": "node scripts/installExternalPlugins.js",
    "plugins:prepare": "node scripts/prepareInstalledPlugins.js",
    "test": "NODE_ENV=test ava --c $(node -p 'Math.max(os.cpus().length - 2, 1)')",
    "test:server": "cp -n .env.example .env && yarn && NODE_ENV=test ava --c $(node -p 'Math.max(os.cpus().length - 2, 1)')",
    "test:noconcurrency": "NODE_ENV=test ava --c 1",
    "test:ci:integration": "yarn run pretest && NODE_ENV=test TESTS=integration ava --c 1 --tap | tap-xunit",
    "test:ci:unit": "NODE_ENV=test TESTS=unit ava --c 1 --tap | tap-xunit",
    "test:ci:server": "cp -n .env.example .env && yarn && NODE_ENV=test ava --c 1 --tap | tap-xunit",
    "seed": "INSTANT_DATA=true yarn run test scripts/instantData.js",
    "seed:ci": "INSTANT_DATA=true yarn run test scripts/instantData.js -- --tap",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "knex": "knex",
    "docker:db": "docker-compose up -d postgresql redis elasticsearch",
    "docker:db:reset": "docker-compose down && docker volume prune -f",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:apm": "COMPOSE_PROJECT_NAME=saltana_monitoring docker-compose -f docker-compose.monitoring.yml",
    "release": "standard-version"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^2.1.1",
    "@elastic/elasticsearch": "^7.13.0",
    "@hapi/bourne": "^2.0.0",
    "@saltana/common": "*",
    "@saltana/objection": "*",
    "@saltana/util-keys": "*",
    "aws-param-store": "^3.2.0",
    "aws-sdk": "^2.958.0",
    "bcrypt": "^5.0.1",
    "big.js": "^6.1.1",
    "bluebird": "^3.7.2",
    "canihazusername": "^2.2.0",
    "cheerio": "^1.0.0-rc.10",
    "clean-deep": "^3.4.0",
    "cote": "1.0.3",
    "cron": "^1.8.2",
    "debug": "~4.3.2",
    "dotenv": "^10.0.0",
    "elastic-apm-node": "~3.17.0",
    "glob": "^7.1.7",
    "handlebars": "^4.7.7",
    "http-errors": "^1.8.0",
    "intl": "^1.2.5",
    "intl-format-cache": "^4.3.1",
    "intl-messageformat": "^4.4.0",
    "joi": "^17.4.2",
    "jose": "^3.15.5",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "knex": "^0.95.14",
    "lodash": "4.17.21",
    "lru-cache": "^6.0.0",
    "mobitel-iso-4217-currencies": "^1.1.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "ms": "^2.1.3",
    "nanoid": "^3.1.30",
    "ngrok": "^4.2.2",
    "nodemailer": "^6.6.3",
    "objection-db-errors": "^1.1.2",
    "openid-client": "4.7.4",
    "parse-github-url": "^1.0.2",
    "path-to-regexp": "^6.2.0",
    "pegjs": "0.10.0",
    "pg": "^8.6.0",
    "redis": "^3.1.2",
    "redlock": "^4.2.0",
    "restify": "^8.6.0",
    "restify-cors-middleware2": "~2.1.2",
    "roarr": "^7.7.0",
    "serialize-error": "^8.1.0",
    "shelljs": "^0.8.4",
    "sinon": "^11.1.2",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.4.0",
    "stripe": "^8.188.0",
    "superagent": "~6.1.0",
    "supports-color": "^9.0.2",
    "useragent": "^2.3.0",
    "uuid": "^8.3.2",
    "virgen-acl": "^0.0.22",
    "vm2": "^3.9.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5",
    "ava": "~3.15.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "express": "^4.17.1",
    "lint-staged": ">=10.5.4",
    "lru-cache": "^6.0.0",
    "oidc-provider": "^6.31.0",
    "puppeteer-core": "^9.0.0",
    "semver": "^7.3.5",
    "socket.io-client": "^2.4.0",
    "sql-fixtures": "^1.0.4",
    "standard-version": "^9.2.0",
    "supertest": "^4.0.2",
    "tap-xunit": "^2.4.1"
  },
  "engines": {
    "node": ">=12.14"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "standard-version": {
    "skip": {
      "commit": true
    }
  }
}
